{
  "compilerOptions": {
    "target": "ES2020",
    // "module": "ESNext",
    "module": "esnext", // ✅ Node ESM compatible
    "moduleResolution": "bundler", // ✅ Node-style import resolution
    // "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
